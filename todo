28. Merge --dbus=none from https://github.com/Sidnioulz/firejail

  // block dbus session bus the hard way if necessary
  if (cfg.dbus == 0) {
    char *dbus_path;
		if (asprintf(&dbus_path, "/run/user/%d/bus", getuid()) == -1)
			errExit("asprintf");
    fs_blacklist_file(dbus_path);
    free(dbus_path);
}

